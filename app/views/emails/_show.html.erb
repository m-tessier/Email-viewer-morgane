
    <h1><%= @email.object %></h1>
    <p><%= @email.body %></p>
    <div class="btn-group" role="group">
      <%= link_to "Supprimer", email_path(@email.id), class:"btn btn-outline-dark", method: :delete, remove: true%>
      <% if @email.read == true %>
        <%= link_to "Marquer comme non-lu", email_path, class:"btn btn-sm btn-outline-dark", method: :put, remove: true %>
      <% else %>
        <%= link_to "Marquer comme lu", email_path, class:"btn btn-sm btn-outline-dark", method: :put, remove: true %>
      <% end %>
    </div>
